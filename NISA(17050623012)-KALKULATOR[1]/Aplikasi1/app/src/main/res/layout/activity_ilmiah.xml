<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/AngkaMasuk"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:gravity="end"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/Hasil"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@android:color/white"
        android:textSize="60dp"
        android:gravity="end"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tbClear"
                style="@style/ActionButtonStyle"
                android:text="CE" />

            <TextView
                android:id="@+id/tbOpen"
                style="@style/ActionButtonStyle"
                android:text="("
                />
            <TextView
                android:id="@+id/tbClose"
                style="@style/ActionButtonStyle"
                android:text=")"
                />

            <TextView
                android:id="@+id/tbSin"
                style="@style/ActionButtonStyle"
                android:text="SIN" />

            <TextView
                android:id="@+id/tbBagi"
                style="@style/ActionButtonStyle"
                android:text="/"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tbTujuh"
                style="@style/NumberButtonStyle"
                android:text="7"
                />
            <TextView
                android:id="@+id/tbDelapan"
                style="@style/NumberButtonStyle"
                android:text="8"
                />
            <TextView
                android:id="@+id/tbSembilan"
                style="@style/NumberButtonStyle"
                android:text="9"
                />

            <TextView
                android:id="@+id/tbCos"
                style="@style/ActionButtonStyle"
                android:text="COS" />

            <TextView
                android:id="@+id/tbKali"
                style="@style/ActionButtonStyle"
                android:text="x" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tbEmpat"
                style="@style/NumberButtonStyle"
                android:text="4"
                />
            <TextView
                android:id="@+id/tbLima"
                style="@style/NumberButtonStyle"
                android:text="5"
                />
            <TextView
                android:id="@+id/tbEnam"
                style="@style/NumberButtonStyle"
                android:text="6"
                />

            <TextView
                android:id="@+id/tbTan"
                style="@style/ActionButtonStyle"
                android:text="TAN" />

            <TextView
                android:id="@+id/tbKurang"
                style="@style/ActionButtonStyle"
                android:text="-"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tbSatu"
                style="@style/NumberButtonStyle"
                android:text="1" />

            <TextView
                android:id="@+id/tbDua"
                style="@style/NumberButtonStyle"
                android:text="2" />

            <TextView
                android:id="@+id/tbTiga"
                style="@style/NumberButtonStyle"
                android:text="3" />

            <TextView
                android:id="@+id/tbLn"
                style="@style/ActionButtonStyle"
                android:text="^"
                />

            <TextView
                android:id="@+id/tbTambah"
                style="@style/ActionButtonStyle"
                android:text="+"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tbNol"
                style="@style/NumberButtonStyle"
                android:text="0" />

            <TextView
                android:id="@+id/tbKoma"
                style="@style/NumberButtonStyle"
                android:text="." />

            <ImageView
                android:id="@+id/tbBack"
                style="@style/NumberButtonStyle"
                android:scaleType="center"
                android:src="@drawable/baseline_backspace_black_18dp" />

            <TextView
                android:id="@+id/tbLog"
                style="@style/ActionButtonStyle"
                android:text="Log"
                />

            <TextView
                android:id="@+id/tbSamadengan"
                style="@style/ActionButtonStyle"
                android:clickable="true"
                android:text="="
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>