<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/dispFirst"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:gravity="end"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/dispSecond"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@android:color/white"
        android:textSize="60dp"
        android:gravity="end"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cl"
                style="@style/ActionButtonStyle"
                android:background="#3F51B5"
                android:text="CE" />

            <TextView
                android:id="@+id/bin"
                style="@style/ActionButtonStyle"
                android:background="#3F51B5"
                android:text="BIN" />

            <TextView
                android:id="@+id/hexa"
                style="@style/ActionButtonStyle"
                android:background="#3F51B5"
                android:text="HEXA" />

            <TextView
                android:id="@+id/okt"
                style="@style/ActionButtonStyle"
                android:background="#3F51B5"
                android:text="OCT" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/svn"
                style="@style/NumberButtonStyle"
                android:text="7"
                />
            <TextView
                android:id="@+id/eght"
                style="@style/NumberButtonStyle"
                android:text="8"
                />
            <TextView
                android:id="@+id/nn"
                style="@style/NumberButtonStyle"
                android:text="9"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fr"
                style="@style/NumberButtonStyle"
                android:text="4"
                />
            <TextView
                android:id="@+id/fv"
                style="@style/NumberButtonStyle"
                android:text="5"
                />
            <TextView
                android:id="@+id/sx"
                style="@style/NumberButtonStyle"
                android:text="6"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/n"
                style="@style/NumberButtonStyle"
                android:text="1"
                />
            <TextView
                android:id="@+id/tw"
                style="@style/NumberButtonStyle"
                android:text="2"
                />
            <TextView
                android:id="@+id/thr"
                style="@style/NumberButtonStyle"
                android:text="3"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nl"
                style="@style/NumberButtonStyle"
                android:text="0"
                />
            <ImageView
                android:id="@+id/bck"
                style="@style/NumberButtonStyle"
                android:src="@drawable/baseline_backspace_black_18dp"
                android:scaleType="center"
                />

            <TextView
                android:id="@+id/eql"
                style="@style/ActionButtonStyle"
                android:background="#3F51B5"
                android:clickable="true"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>